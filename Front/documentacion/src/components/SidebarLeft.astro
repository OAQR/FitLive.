---
/**
 * Renderiza la barra de navegación lateral principal.
 * Utiliza la configuración de `SIDEBAR_LINKS` para generar la estructura
 * de navegación dinámicamente a través del componente `NavLink`.
 */
import { SIDEBAR_LINKS } from "@config/sidebar";
import { SITE_CONFIG } from "@config/site";
import NavLink from "./NavLink.astro";

const { pathname } = Astro.url;

// La fecha de actualización se genera en el momento de la compilación.
const buildDate = new Date().toLocaleDateString("es-ES", {
    year: "numeric",
    month: "long",
    day: "numeric",
});
---

<aside class="sidebar-left" aria-label="Navegación de la documentación">
    <div class="index-date">{SITE_CONFIG.ui.lastUpdated}: {buildDate}</div>

    <nav>
        <ul>
            {
                SIDEBAR_LINKS.map((link) => (
                    <NavLink {...link} currentPath={pathname} />
                ))
            }
        </ul>
    </nav>
</aside>
